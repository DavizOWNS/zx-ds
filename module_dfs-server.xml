<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dfs-server" default="compile.module.dfs-server">
  <dirname property="module.dfs-server.basedir" file="${ant.file.module_dfs-server}"/>
  
  <property name="module.jdk.home.dfs-server" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dfs-server" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dfs-server" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dfs-server" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="dfs-server.output.dir" value="${module.dfs-server.basedir}/out/production/dfs-server"/>
  <property name="dfs-server.testoutput.dir" value="${module.dfs-server.basedir}/out/test/dfs-server"/>
  
  <path id="dfs-server.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dfs-server.module.production.classpath">
    <path refid="${module.jdk.classpath.dfs-server}"/>
  </path>
  
  <path id="dfs-server.runtime.production.module.classpath">
    <pathelement location="${dfs-server.output.dir}"/>
  </path>
  
  <path id="dfs-server.module.classpath">
    <path refid="${module.jdk.classpath.dfs-server}"/>
    <pathelement location="${dfs-server.output.dir}"/>
  </path>
  
  <path id="dfs-server.runtime.module.classpath">
    <pathelement location="${dfs-server.testoutput.dir}"/>
    <pathelement location="${dfs-server.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.dfs-server">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dfs-server">
    <patternset refid="excluded.from.module.dfs-server"/>
  </patternset>
  
  <path id="dfs-server.module.sourcepath">
    <dirset dir="${module.dfs-server.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dfs-server" depends="compile.module.dfs-server.production,compile.module.dfs-server.tests" description="Compile module dfs-server"/>
  
  <target name="compile.module.dfs-server.production" depends="register.custom.compilers" description="Compile module dfs-server; production classes">
    <mkdir dir="${dfs-server.output.dir}"/>
    <javac2 destdir="${dfs-server.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dfs-server}/javac">
      <compilerarg line="${compiler.args.dfs-server}"/>
      <bootclasspath refid="dfs-server.module.bootclasspath"/>
      <classpath refid="dfs-server.module.production.classpath"/>
      <src refid="dfs-server.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dfs-server"/>
    </javac2>
    
    <copy todir="${dfs-server.output.dir}">
      <fileset dir="${module.dfs-server.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dfs-server.tests" depends="register.custom.compilers,compile.module.dfs-server.production" description="compile module dfs-server; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dfs-server" description="cleanup module">
    <delete dir="${dfs-server.output.dir}"/>
    <delete dir="${dfs-server.testoutput.dir}"/>
  </target>
</project>